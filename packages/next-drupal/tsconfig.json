{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "dist",
    "paths": {
      "@edw/next-drupal": ["./src"],
      "@edw/next-drupal/*": ["./src/*"]
    }
  },
  "include": [
    "**/*.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.mjs",
    ".eslintrc.js"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
